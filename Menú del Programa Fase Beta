            printf( "\n   Introduzca opci%cn (1-4): ", 162 );
            scanf( "%d", &opcion );

        } while ( opcion < 1 || opcion > 4 );
        /* La opci贸n s贸lo puede ser 1, 2, 3 贸 4 */

